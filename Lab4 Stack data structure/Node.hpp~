*	Purpose: Implementation file of Node Class. 
*/



template <typename T>
Node<T>::Node()
{
	m_value = T();
	m_next = nullptr;
}

//Set methods
template <typename T>
void Node<T>::setValue(T value)
{
	m_value = value;
}

template <typename T>
void Node<T>::setNext(Node<T>* next)
{
	m_next = next;
}

//Get methods
template <typename T>
T Node<T>::getValue()
{
	return m_value;
}

template <typename T>
Node<T>* Node<T>::getNext()
{
	return m_next;
}



